@model GPMS.Web.Models.LoginModel
@{
    ViewBag.Title = "登录"; 
    Layout = "~/Views/Shared/_LayoutWithNavigation.cshtml";
}
<div class="loginRegister_box">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "login_form", @class = "form-horizontal", @role = "form" }))
    { @Html.AntiForgeryToken()
        <div class="top_b">登录您的账户</div>
        <div style="padding-left: 15%">@Html.ValidationMessage("errorMsg")</div>
        <div class="cnt_b">
            <div class="form-group">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "用户名（6-18位数字、字母的组合）" })
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @placeholder = "密 码（6-16位数字、字母的组合）", @type = "Password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input type="checkbox"> 记住我
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="login_register_btn">登  录</button> @*@Html.ActionLink("返回", "Index", "Home", null, new { @class = "btn btn-default" })*@
            </div>
            <div class="form-group">
                没有帐号，@Html.ActionLink("免费注册", "Register", "Account")
                <span style="margin-left:40%">@Html.ActionLink("忘记密码?", "Register", "Account")</span>
            </div>
        </div>
    }
</div>

