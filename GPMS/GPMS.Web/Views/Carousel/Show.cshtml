@model IList<GPMS.Core.Entities.Carousel>

<div class="carousel" id="carousel-460912">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <li data-slide-to="@i" class="active" data-target="#carousel-460912">&nbsp;</li>
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            <div class="item">
                <img alt="" src="@string.Format("/Files/Image/{0}/{1}",(int)item.ImageObject.Filetype,item.ImageObject.ID)" />
                <div class="carousel-caption" contenteditable="true">
                    <h4>棒球</h4>
                    <p>@item.ImageObject.Description</p>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" data-slide="prev" href="#carousel-460912">&lsaquo;</a>
    <a class="right carousel-control" data-slide="next" href="#carousel-460912">&rsaquo;</a>
</div>